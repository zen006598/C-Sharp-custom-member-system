@model TimePunchClock.Models.CreateSession
@{
    ViewData["Title"] = "Log In";
}

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

<div>
    <h1 class="display-4">Log In</h1>
    <form method="post" asp-action="LogIn" asp-controller="Users">
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" asp-for="Email">
            <span asp-validation-for="Email" style="color:red"></span>
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" asp-for="Password">
            <span asp-validation-for="Password" style="color:red"></span>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
    </form>
</div>