@model TimePunchClock.Models.CreateUser
@{
    ViewData["Title"] = "Sign Up";
}

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

<div>
    <h1 class="display-4">Sign Up</h1>
    <form method="post" asp-action="Register" asp-controller="Users">
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp"
                   asp-for="Email">
            <span asp-validation-for="Email" style="color:red"></span>
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" asp-for="Password">
            <span asp-validation-for="Password" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" for="passwordConfirm">Password Confirmation</label>
            <input type="password" class="form-control" id="passwordConfirm" name="PasswordConfirm">
            <span asp-validation-for="PasswordConfirm" style="color:red"></span>
        </div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
</div>
